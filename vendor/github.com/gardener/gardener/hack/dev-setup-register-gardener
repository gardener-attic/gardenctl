IP_ROUTE=$(ip route get 1)
IP_ADDRESS=$(echo ${IP_ROUTE#*src} | awk '{print $1}')

APISERVICE_NAME="v1beta1.garden.sapcloud.io"
SERVICE_NAME="gardener-apiserver"
ENDPOINT_NAME="gardener-apiserver"

if kubectl get apiservice "$APISERVICE_NAME" &> /dev/null; then
  kubectl delete apiservice $APISERVICE_NAME --wait=false
  kubectl patch apiservices $APISERVICE_NAME -p '{"metadata":{"finalizers":null}}' 2> /dev/null || true
fi
if kubectl get service "$SERVICE_NAME" &> /dev/null; then
  kubectl delete service $SERVICE_NAME
fi
if kubectl get endpoints "$ENDPOINT_NAME" &> /dev/null; then
  kubectl delete endpoints $ENDPOINT_NAME
fi

cat <<EOF | kubectl apply -f -
kind: Service
apiVersion: v1
metadata:
  name: $SERVICE_NAME
  namespace: garden
spec:
  ports:
  - protocol: TCP
    port: 443
    targetPort: 8443
---
kind: Endpoints
apiVersion: v1
metadata:
  name: $ENDPOINT_NAME
  namespace: garden
subsets:
- addresses:
  - ip: ${IP_ADDRESS}
  ports:
  - port: 8443
EOF

cat <<EOF | kubectl apply -f -
apiVersion: apiregistration.k8s.io/v1beta1
kind: APIService
metadata:
  name: $APISERVICE_NAME
spec:
  insecureSkipTLSVerify: true
  group: garden.sapcloud.io
  version: v1beta1
  groupPriorityMinimum: 10000
  versionPriority: 20
  service:
    name: gardener-apiserver
    namespace: garden
EOF

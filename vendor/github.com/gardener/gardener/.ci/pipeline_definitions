gardener:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess:
          'inject-commit-hash'
        inject_effective_version: true
      publish:
        dockerimages:
          apiserver:
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/gardener/apiserver'
